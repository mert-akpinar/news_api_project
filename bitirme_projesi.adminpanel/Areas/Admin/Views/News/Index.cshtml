@model List<bitirme_projesi.adminpanel.Dtos.NewsDtos.ResultNewsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">

            <div class="card-header">
                <h5>Haber Yönetim Sayfası</h5>
                <div class="card-header-right">
                    <div class="btn-group card-option">
                        <button type="button" class="btn dropdown-toggle btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="feather icon-more-horizontal"></i>
                        </button>
                        <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                            <li class="dropdown-item full-card"><a href="#!"><span><i class="feather icon-maximize"></i> maximize</span><span style="display:none"><i class="feather icon-minimize"></i> Restore</span></a></li>
                            <li class="dropdown-item minimize-card"><a href="#!"><span><i class="feather icon-minus"></i> collapse</span><span style="display:none"><i class="feather icon-plus"></i> expand</span></a></li>
                            <li class="dropdown-item reload-card"><a href="#!"><i class="feather icon-refresh-cw"></i> reload</a></li>
                            <li class="dropdown-item close-card"><a href="#!"><i class="feather icon-trash"></i> remove</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Haber Başlığı</th>
                        <th>Haber Metini</th>
                        <th>Haber Yazarı</th>
                        <th>Haber Görseli</th>
                        <th>Haber Yazılma Tarihi</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.NewsID</td>
                            <td>@item.NewsTitle</td>
                            <td>@item.NewsDescription</td>
                            <td>@item.NewsAuthor</td>
                            <td>@item.NewsImageUrl</td>
                            <td>@item.NewsDate</td>
                            <td><a href="/Admin/News/DeleteNews/@item.NewsID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/News/UpdateNews/@item.NewsID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }
                </table>
                <td><a href="/Admin/News/CreateNews/" class="btn btn-outline-primary">Haber Ekle</a></td>
            </div>
        </div>
    </div>
</div>

