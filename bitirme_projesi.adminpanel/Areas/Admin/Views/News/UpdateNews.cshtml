@model UpdateNewsDto
@{
    ViewData["Title"] = "UpdateNews";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Haber Düzenleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="NewsID" />
    <label>Haber Başlığı</label>
    <input type="text" asp-for="NewsTitle" class="form-control" />
    <br />
    <label>Haber Metini</label>
    <input type="textarea" asp-for="NewsDescription" class="form-control" />
    <br />
    <label>Haber Yazarı</label>
    <input type="text" asp-for="NewsAuthor" class="form-control" />
    <br />
    <label>Haber Görseli</label>
    <input type="text" asp-for="NewsImageUrl" class="form-control" />
    <br />
    <label>Haber Yazılma Tarihi</label>
    <input type="datetime" asp-for="NewsDate" class="form-control" />
    <br />
    <button class="btn btn-success">Haberi Güncelle</button>
</form>